{
    "name": "kepariss-boilerplate",
    "version": "1.0.0",
    "description": "kepariss-boilerplate",
    "scripts": {
        "start": "webpack serve --config ./config/webpack/webpack.dev.config.ts",
        "build": "rimraf dist && webpack --config ./config/webpack/webpack.prod.config.ts",
        "test": "jest",
        "fix": "npm run fix:prettier && npm run fix:eslint",
        "fix:eslint": "eslint --fix -f unix .",
        "fix:prettier": "prettier --write .",
        "check:style": "stylelint -f unix \"**/*.scss\"",
        "check:prettier": "prettier --check .",
        "check:eslint": "eslint -f unix .",
        "check:tsc": "tsc --project tsconfig.json",
        "check": "npm run check:prettier && npm run check:tsc && npm run check:eslint && npm run check:style",
        "lint-staged": "lint-staged --config ./config/lint-staged.mjs",
        "pre-push": "npm run build && npm run test"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.3"
    },
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/plugin-transform-runtime": "^7.19.6",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@babel/runtime": "^7.20.1",
        "@svgr/webpack": "^6.5.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/dotenv-webpack": "^7.0.3",
        "@types/jest": "^29.1.2",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.8",
        "@types/webpack-dev-server": "^4.7.2",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.47.1",
        "babel-loader": "^9.1.0",
        "classnames": "^2.3.2",
        "clean-webpack-plugin": "^4.0.0",
        "css-loader": "^6.7.1",
        "dotenv-webpack": "^8.0.1",
        "eslint": "^8.27.0",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-webpack-plugin": "^3.2.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^7.2.13",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.2",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.2.0",
        "jest-environment-jsdom": "^29.2.0",
        "lint-staged": "13.0.3",
        "node-sass": "^7.0.3",
        "prettier": "^2.7.1",
        "rimraf": "3.0.2",
        "sass-loader": "^13.1.0",
        "style-loader": "^3.3.1",
        "stylelint": "13.13.1",
        "stylelint-config-prettier": "8.0.2",
        "stylelint-config-recommended": "5.0.0",
        "stylelint-no-unresolved-module": "1.1.1",
        "stylelint-scss": "3.20.1",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.11.1"
    }
}
